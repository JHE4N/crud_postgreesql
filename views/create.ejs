  <body>
      <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header">Novo registro</div>
            <div class="card-body">
                <form action="/save" method="POST">
                    <div class="mb-3">
                        <label for="user">Cliente</label>
                        <input type="text" class="form-control" id='user' name='user' tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Propriedade</label>
                       <select id="property" name="property" class="form-select" aria-label="Default select example">
                        <option value="Casa" selected>Casa</option>
                        <option value="Apartamento">Apartamento</option>
                       </select>
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Valor</label>
                        <input type="number" class="form-control" id='value' name='value' tabindex="1">
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="5">Salvar</button>
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
      </div>
